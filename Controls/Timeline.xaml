<UserControl Style="{DynamicResource UserControlStyle}" x:Class="TimelineCreator.Controls.Timeline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             Background="White" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged" MouseWheel="UserControl_MouseWheel" PreviewMouseDown="UserControl_PreviewMouseDown" MouseDown="UserControl_MouseDown" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove" SnapsToDevicePixels="True" Focusable="True">

    <UserControl.Resources>
        <Style x:Key="UserControlStyle" TargetType="{x:Type UserControl}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="theGrid" MaxWidth="0" Background="White"/>
</UserControl>
