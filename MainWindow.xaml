<Window x:Class="TimelineRenderer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TimelineRenderer"
        
        Title="Starship Tanking Timeline" Height="450" Width="800" WindowState="Maximized" Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Background="#FFE5E5E5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Center">
                <Button Content="New Timeline" HorizontalAlignment="Left" Padding="8,0,8,2" Height="26" Margin="0,0,5,0" Click="NewTimelineButton_Click"/>
                <Button Content="Open" HorizontalAlignment="Left" Padding="8,0,8,2" Height="26" Margin="0,0,5,0" Click="OpenButton_Click"/>
                <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Padding="8,0,8,2" Height="26" Margin="0,0,5,0" Click="SaveButton_Click"/>
                <Button Content="Reset Zoom" HorizontalAlignment="Left" Padding="8,0,8,2" Height="26" Margin="0" Click="ResetZoomButton_Click"/>
            </StackPanel>

            <StackPanel Margin="0,46,0,0">
                <Expander Style="{DynamicResource ExpanderStyle1}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Header="Document" Background="SlateGray" IsExpanded="True" BorderThickness="0">
                    <Border Background="#FFE5E5E5" Padding="10">
                        <StackPanel VerticalAlignment="Top">
                            <Grid VerticalAlignment="Top">
                                <TextBlock Text="Title:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <TextBox x:Name="docTitleTextBox" Padding="5,3,5,0" Margin="30,0,0,0" TextChanged="DocTitleTextBox_TextChanged" Height="26"/>
                            </Grid>

                            <TextBox x:Name="docDescripTextBox" Padding="5,3,5,0" Margin="0,5,0,5" Height="100" VerticalAlignment="Top" TextChanged="DocDescripTextBox_TextChanged" AcceptsReturn="True"/>

                            <Grid VerticalAlignment="Top">
                                <TextBlock Text="Time Zone:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ComboBox x:Name="timeZoneComboBox" Margin="64,0,0,0" Height="26" VerticalContentAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Expander>

                <Expander Style="{DynamicResource ExpanderStyle1}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Header="Add Timeline Item" Background="SlateGray" IsExpanded="True" BorderThickness="0">
                    <Border Background="#FFE5E5E5" Padding="10">
                        <StackPanel>
                            <Grid VerticalAlignment="Top">
                                <CheckBox x:Name="addApproxCheckBox" Content="Approximate" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBox x:Name="addTimeTextBox" TextAlignment="Center" Padding="5,3,5,0" TextChanged="AddTimeTextBox_TextChanged" Margin="98,0,48,0"/>
                                <Button x:Name="addNowButton" Content="Now" HorizontalAlignment="Right" Padding="8,0,8,2" Height="26" Click="AddNowButton_Click"/>
                            </Grid>

                            <TextBox x:Name="addTextTextBox" Padding="5,3,5,0" Margin="0,5,0,5" PreviewKeyDown="AddTextTextBox_PreviewKeyDown" Height="100"/>
                            <Button x:Name="addAddButton" Content="Add to Timeline" HorizontalAlignment="Right" Padding="8,0,8,2" Height="26" Click="AddAddButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Border>
                </Expander>

                <Expander x:Name="editExpander" Style="{DynamicResource ExpanderStyle1}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Header="Edit Timeline Item" Background="SlateGray" IsExpanded="False" BorderThickness="0">
                    <Border Background="#FFE5E5E5" Padding="10">
                        <StackPanel>
                            <Grid VerticalAlignment="Top">
                                <CheckBox x:Name="editApproxCheckBox" Content="Approximate" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <TextBox x:Name="editTimeTextBox" TextAlignment="Center" Padding="5,3,5,0" TextChanged="EditTimeTextBox_TextChanged" Margin="98,0,48,0"/>
                                <Button x:Name="editNowButton" Content="Now" HorizontalAlignment="Right" Padding="8,0,8,2" Height="26" Click="EditNowButton_Click"/>
                            </Grid>

                            <TextBox x:Name="editTextTextBox" Padding="5,3,5,0" Margin="0,5,0,5" PreviewKeyDown="EditTextTextBox_PreviewKeyDown" Height="100"/>
                            <Button x:Name="editSaveButton" Content="Save Item" HorizontalAlignment="Right" Padding="8,0,8,2" Height="26" Click="EditSaveButton_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Border>
                </Expander>
            </StackPanel>
        </Grid>

        <Grid MaxWidth="600" Panel.ZIndex="-1" Grid.Column="1">
            <local:Timeline x:Name="theTimeline" Margin="10,10,10,10" SnapsToDevicePixels="True" ItemSelected="TheTimeline_ItemSelected" FontSize="14"/>
        </Grid>
    </Grid>
</Window>
