<Window x:Class="TimelineCreator.ItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TimelineCreator"
        
        Title="Add Item to Timeline" Height="220" Width="360" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="10">
            <Grid VerticalAlignment="Top">
                <TextBox x:Name="timeTextBox" TextAlignment="Center" TextChanged="TimeTextBox_TextChanged" Margin="0,0,48,0" PreviewKeyDown="TextBox_PreviewKeyDown"/>
                <Button Content="Now" HorizontalAlignment="Right" Click="NowButton_Click"/>
            </Grid>

            <TextBox x:Name="itemTextField" Margin="0,31,0,0" PreviewKeyDown="TextBox_PreviewKeyDown" TextWrapping="Wrap" Height="Auto"/>

            <!--<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                <RadioButton Style="{DynamicResource ColouredRadioButtonStyle}" Margin="0,0,5,0" Background="SlateGray" IsChecked="True"/>
                <RadioButton Style="{DynamicResource ColouredRadioButtonStyle}" Margin="0,0,5,0" Background="Coral"/>
                <RadioButton Style="{DynamicResource ColouredRadioButtonStyle}" Background="Purple"/>
            </StackPanel>-->
        </Grid>

        <Border Background="LightGray" Grid.Row="1">
            <Grid Margin="10">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="submitButton" Content="Add Item" Margin="0,0,10,0" Width="80" Click="SubmitButton_Click" IsDefault="True"/>
                    <Button Content="Cancel" IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
