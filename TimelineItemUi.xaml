<UserControl x:Class="TimelineRenderer.TimelineItemUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Background="Transparent">

    <StackPanel x:Name="theStackPanel" Orientation="Horizontal">
        <TextBlock x:Name="tildeTextBlock" Text="~" Margin="0,0,3,0"/>
        <TextBlock x:Name="timeTextBlock" Text="{Binding Path=DateTime, Mode=OneWay, StringFormat='HH:mm:ss'}" Margin="0,0,10,0"/>
        <Ellipse x:Name="theEllipse" Width="10" Height="10" Fill="SlateGray"/>
        <Border Width="15" Height="2" Margin="10,0,10,0" BorderThickness="1" BorderBrush="Black"/>
        <TextBlock Text="{Binding Text}"/>
    </StackPanel>
</UserControl>
