<UserControl x:Class="TimelineCreator.TimelineItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Background="Transparent" Focusable="True" VerticalAlignment="Top">

    <Grid x:Name="theStackPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="timeTextBlock"/>
        <Ellipse x:Name="markerEllipse" Width="10" Height="10" Fill="SlateGray" Grid.Column="2"/>
        <Border Width="15" BorderThickness="0,1,0,1" BorderBrush="Black" Grid.Column="4" VerticalAlignment="Center"/>
        <TextBlock x:Name="textTextBlock" TextTrimming="CharacterEllipsis" Grid.Column="6"/>
    </Grid>
</UserControl>
